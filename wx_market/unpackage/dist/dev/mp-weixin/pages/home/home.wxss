/* 水平间距 */
.page_home {
  padding: 20rpx;
  line-height: 24px;
}
.page_home .uni-margin-wrap {
  margin: 20rpx auto;
}
.page_home .uni-margin-wrap .swiper-item {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}
.page_home .uni-margin-wrap .uni-bg-red {
  background: red;
}
.page_home .uni-margin-wrap .uni-bg-green {
  background: green;
}
.page_home .uni-margin-wrap .uni-bg-blue {
  background: blue;
}
.page_home .card_list {
  margin-top: 12rpx;
}
.page_home .card_list .grid-box {
  display: flex;
  width: 100%;
  height: 100%;
  align-items: center;
  justify-content: center;
}
.page_home .home-card-list {
  height: 200rpx;
  margin: 20rpx 0;
  padding: 0 10rpx;
  border-radius: 8rpx;
  border: 1px solid #ccc;
  display: flex;
  justify-content: space-between;
}
.page_home .home-card-list .home-card-left {
  width: 180rpx;
  height: 180rpx;
  border-radius: 8rpx;
  background: red;
  margin: 10rpx;
}
.page_home .home-card-list .home-card-right {
  flex: 1;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.page_home .home-card-list .home-card-right .top {
  font-weight: 600;
  font-size: 34rpx;
}
.page_home .home-card-list .home-card-right .middle {
  color: #8a8a8a;
  display: flex;
  justify-content: space-between;
}
.page_home .home-card-list .home-card-right .middle .yellow {
  color: #FFC300;
}