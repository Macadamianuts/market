/* 水平间距 */
.page_my {
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: relative;
}
.page_my .bg {
  width: 100%;
  height: 260rpx;
  background: linear-gradient(to bottom, #2ECC71, #1D8348);
  z-index: -1;
  position: absolute;
}
.page_my .user_msg_box {
  width: 100%;
  margin-top: 20rpx;
}
.page_my .user_msg_box .user_msg {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.page_my .user_msg_box .user_msg .user_img image {
  width: 136rpx;
  height: 136rpx;
  border-radius: 50%;
  margin: 15rpx 20rpx;
}
.page_my .user_msg_box .user_msg .user_mgs_list {
  flex: 1;
}
.page_my .user_msg_box .user_msg .user_mgs_list .user_name {
  color: #fff;
  font-size: 38rpx;
  margin: 10rpx 0;
}
.page_my .user_msg_box .user_msg .setting_btn {
  float: right;
  color: #fff;
}
.page_my .user_msg_box .user_msg .setting_btn image {
  width: 60rpx;
  height: 60rpx;
  margin-right: 10rpx;
}
.page_my .mode_list {
  width: 96%;
  height: 130rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  text-align: center;
  background-color: #fff;
  border-radius: 8rpx;
  margin: 20rpx auto;
  color: #333;
}
.page_my .mode_list .mode_item .number {
  font-size: 38rpx;
}
.page_my .mode_list .mode_item .text {
  font-size: 32rpx;
}
.page_my .order_list {
  width: 96%;
  height: 130rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  text-align: center;
  background-color: #fff;
  border-radius: 8rpx;
  margin: 20rpx auto;
  color: #333;
}
.page_my .order_list .order_item {
  width: 100%;
}
.page_my .order_list .order_item image {
  width: 64rpx;
  height: 64rpx;
}
.page_my .feature_list {
  width: 96%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  text-align: center;
  background-color: #fff;
  border-radius: 8rpx;
  margin: 20rpx auto;
  color: #333;
}
.page_my .feature_list .feature_item {
  width: 100%;
  display: flex;
  padding: 15rpx 10rpx;
  border-bottom: 1px solid #ccc;
  align-items: center;
}
.page_my .feature_list .feature_item .feature_message {
  width: 100%;
  display: flex;
  align-items: center;
}
.page_my .feature_list .feature_item .feature_message .feature_img image {
  width: 54rpx;
  height: 54rpx;
  display: inline-block;
  margin: 0 10rpx;
}
.page_my .feature_list .feature_item .feature_message .feature_text {
  text-align: center;
  margin: 0 10rpx;
}
.page_my .feature_list .feature_item .right_img {
  float: right;
}
.page_my .feature_list .feature_item .right_img image {
  width: 44rpx;
  height: 44rpx;
}