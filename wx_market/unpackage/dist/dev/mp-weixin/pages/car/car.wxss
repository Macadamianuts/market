/* 水平间距 */
.shop-card-list {
  width: 100%;
  display: flex;
  flex-direction: column;
}
.shop-card-list .shop-card-item {
  margin: 15rpx;
  background-color: #fff;
  display: flex;
  margin: 12rpx;
  border: 1px solid #ccc;
  height: 200rpx;
  overflow: hidden;
  border-radius: 8rpx;
}
.shop-card-list .shop-card-item-left image {
  width: 160rpx;
  height: 180rpx;
  margin: 12rpx;
}
.shop-card-list .shop-card-item-right {
  width: 100%;
}
.shop-card-list .shop-card-item-right .shop-title {
  font-size: 32rpx;
  color: #333;
  width: 100%;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.shop-card-list .shop-card-item-right .shop-price {
  margin: 12rpx 0;
}
.shop-card-list .shop-card-item-right .shop-price .current-price {
  color: #F00;
  font-weight: 600;
  font-size: 36rpx;
}
.shop-card-list .shop-card-item-right .shop-price .original-price {
  text-decoration: line-through;
  font-size: 28rpx;
  color: #666;
}
.shop-card-list .shop-card-item-right .shop-btns {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.shop-card-list .shop-card-item-right .shop-btns .del {
  width: 45rpx;
  height: 45rpx;
  margin-right: 20rpx;
}