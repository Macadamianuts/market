/* 水平间距 */
.shop-card-list {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  overflow: scroll;
  flex-direction: column;
  z-index: 1000;
}
.shop-card-list .shop-card-item {
  width: 100%;
  margin: 15rpx;
  background-color: #fff;
  display: flex;
  margin: 12rpx;
  border: 1px solid #ccc;
  height: 200rpx;
  overflow: hidden;
  border-radius: 8rpx;
  padding: 12rpx;
}
.shop-card-list .shop-card-item .shop-checkbox {
  width: 8%;
  box-sizing: border-box;
  position: relative;
}
.shop-card-list .shop-card-item .shop-checkbox .checkbox-select {
  width: 100%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  margin: 0 auto;
}
.shop-card-list .shop-card-item-left {
  width: 23%;
  margin: 12rpx;
  box-sizing: border-box;
}
.shop-card-list .shop-card-item-left image {
  width: 160rpx;
  height: 180rpx;
}
.shop-card-list .shop-card-item-right {
  width: 60%;
}
.shop-card-list .shop-card-item-right .shop-title {
  font-size: 32rpx;
  color: #333;
  width: 100%;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.shop-card-list .shop-card-item-right .shop-price {
  margin: 12rpx 0;
}
.shop-card-list .shop-card-item-right .shop-price .current-price {
  color: #F00;
  font-weight: 600;
  font-size: 36rpx;
}
.shop-card-list .shop-card-item-right .shop-price .original-price {
  text-decoration: line-through;
  font-size: 28rpx;
  color: #666;
}
.shop-card-list .shop-card-item-right .shop-btns {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.shop-card-list .shop-card-item-right .shop-btns .del {
  width: 45rpx;
  height: 45rpx;
  margin-right: 20rpx;
}
.box {
  height: 100rpx;
}
.shop-msg-bottom {
  z-index: 99;
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #333;
}
.shop-msg-bottom .shop-middle {
  display: flex;
}
.shop-msg-bottom .shop-middle .pay-shopping {
  width: 156rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 12rpx;
  text-align: center;
  border-radius: 25rpx;
  background: linear-gradient(to right, #F8C471, #E67E22);
  color: #fff;
}